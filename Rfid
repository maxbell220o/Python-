#!/usr/bin/env python3
import RPi.GPIO as GPIO
from mfrc522 import SimpleMFRC522

def main():
    reader = SimpleMFRC522()
    try:
        print("Bitte halten Sie die RFID-Karte an den Leser...")
        # Liest die Karte aus; es werden sowohl die ID als auch eventuell gespeicherter Text zurückgegeben.
        card_id, card_text = reader.read()
        print("Die Karten-ID lautet:", card_id)
        # Optional: Falls du auch den auf der Karte gespeicherten Text ausgeben möchtest.
        if card_text.strip() != "":
            print("Auf der Karte gespeicherter Text:", card_text)
    except KeyboardInterrupt:
        print("Programm abgebrochen.")
    finally:
        GPIO.cleanup()

if __name__ == "__main__":
    main()
